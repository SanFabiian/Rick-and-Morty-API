@import 'lib/_var.styl'
.main
	display grid
	grid-template-rows 20rem 1fr
	grid-template-columns repeat(12, 1fr)
	height 100vh
.content
	display flex
	align-items center
	margin-top 2rem
.content
	grid-column 3 / 11
.header
	grid-column 2 / 11
	flex_between()
	display grid
	grid-template-rows 3fr 1fr
	grid-template-columns repeat(6, 1fr)
	&_logo
		grid-column 1 / span 3
		padding 0
		margin-top 3rem
	h1
		grid-row 2 / 3
		grid-column 1 / span 3
	&_nav
		grid-row 2 / 3
		grid-column 5 / 7
.characters
	display grid
	grid-template-columns repeat(2, 1fr)
	gap 3rem
	width 100%
.character_inner
	width 100%
	margin 0
	.character_card:first-child
		grid-column 1 / span 4
	.character_card:last-child
		grid-column 5 / span 4
		display flex
		align-items center
.character_item
	margin 0
	&:hover
		animation zoom .5s
		will-change scale
		animation-timing-function ease-in-out
		animation-fill-mode forwards
.character_name
	padding 1rem
	h2
		font-size font_size_one
	p
		font-size font_size_two
.footer
	grid-row 3
	grid-column 2 / 12
@keyframes zoom
	from
		transform scale(1)
	to
		transform scale(1.1)